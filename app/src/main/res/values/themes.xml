<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_gray</item>
        <item name="colorPrimaryVariant">@color/primary_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tabLayout" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="floatingActionButton" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:backgroundTint">@color/grayStroke</item>
    </style>
</resources>